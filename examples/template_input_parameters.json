{
  "general": {
    "storage": {
      "dir": "/path/to/directory/to/store/output/files", //user: directory where results will be stored
      "dir_tmp": "/tmp"                                , //user: temp directory for intermediate results 
    },
    "interal_format": "iomat",
    "parallel": {
      "enabled": true,
      "workers_fraction": 0.8
    }
  },
  "data": {
    "dir": {
      "name": "/home/user/project-x/demo-data",    // user: where the input data is saved
    },
    "file": {
      "name": "my_data_file.mat",                  // user: name of the data file, can be a regular .mat or a  MatFile
    },
    "slice": {
      "id": 0
    },
    "grid": {
      "type": "unstructured"
    },
    "ht": 0.25,                                    // user: temporal resolution
    "hx": [],                                      // 
    "hy": [],
    "hz": [],
    "units": {
      "space":"mm",                                // user: spatial units
      "time": "ms",                                // user: tempora units
    }
  },
  "interpolation": {
    "file": {
      "exists": false,
      "name": [],
      "keep": true
    },
    "dir": {
      "name": []
    },
    "hx": 3,                                       // user: spatial resolution of interpolation grid
    "hy": 3,                                       // user: spatial resolution of interpolation grid
    "hz": 3,                                       // user: spatial resolution of interpolation grid
    "boundary": {
      "alpha_radius": 30,                          // user: radius of alpha shape to define convex hull
      "thickness": 2,                              // user: thickness in voxels of the boundary mask
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "file": {
      "keep": true,
      "dir": [],
      "name": []
    },
    "initial_conditions": {
      "mode": "random",
      "seed": 42
    },
    "method": { // amplitude-based flows using HS3D
      "name": "hs3d",
      "hs3d": {
        "alpha_smooth": 0.1,
        "max_iterations": 128,
        "burnin": {
           "length": 8
        }
      }
    },
    // "method": { // amplitude-based flows using CNEM
    //   "data": {
    //     "mode": "amplitude"
    //   },
    //   "name": "cnem",
    //   "cnem": {
    //     "convex_hull": "bi",
    //     "alpha_smooth": 0.1,
    //     "max_iterations": 128,
    //     "burnin": {
    //       "length": 8
    //     },
    //     "initial_conditions": {
    //       "mode": "random",
    //       "seed": 42
    //     },
    //     "nodal_flows": {
    //       "enabled": false
    //     }
    //   }
    // },
    // "method": { // phase-based flows using CNEM
    //   "data": {
    //     "mode": "phase"
    //   },
    //   "name": "cnem",
    //   "cnem": {
    //     "convex_hull": "bi"
    //   }
    // },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 4,
        "grid": {
          "type": "unstructured"
        }
      }
    },
    "visualisation": {
      "enabled": true
    },
  },
  "singularity": {
    "file": {
      "keep": true,
      "dir": [],
      "name": []
    },
    "detection": {
      "enabled": true,
      "mode": "vel",
      "threshold": [
        0,                                  // user: lower bound of threshold to detect quasi-null-flows
        0.015625                            // user: upper bound of threshold to detect quasi-null-flows
      ]
    },
    "classification": {
      "enabled": true
    },
    "quantification": {
      "enabled": true
    },
    "visualisation": {
      "enabled": true
    }
  }
}