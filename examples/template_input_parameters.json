{
  "general": {
    "storage": {
      "time_stamp": [],
      "dir": "/path/to/directory/to/store/output/files", //user: directory where results will be stored
      "dir_tmp": "/tmp"                                , //user: temp directory for intermediate results 
    },
    "params": {
        "input": {
          "filename": "input_params_file.json",
          "dir": "examples"
        },
        "output": {
          "filename": "input_params_file.json",
          "dir": "examples"
        }
      },
      "format": "iomat"
    },
    "parallel": {
      "enabled": true,
      "workers_fraction": 0.8
    }
  },
  "data": {
    "file": {
      "dir": "demo-data",
      "name": "rotating_wave_W_c1_d1ms_iomat.mat"
    },
    "slice": {
      "enabled": false,
      "id": 0
    },
    "grid": {
      "type": "unstructured"
    },
    "resolution": {
      "ht": [],
      "hx": [],                                      // 
      "hy": [],
      "hz": [],
      "units": {
         "space":"mm",                                // user: spatial units
          "time": "ms",                               // user: temporal units
     }
  },
  "boundary": {
      "alpha_radius" : 30
    },
  "mode": "amplitude"
  },
  "interpolation": {
    "file": {
      "exists": false,
      "name": [],
      "keep": true
    },
    "dir": {
      "name": []
    },
    "resolution": {
      "ht": [],
      "hx": 3,                                     // Set to be same data.resolution.ht 
      "hy": 3,                                     // user: spatial resolution of interpolation grid
      "hz": 3,                                     // user: spatial resolution of interpolation grid
    },                                   
    "boundary": {
      "alpha_radius": 30,                          // user: radius of alpha shape to define convex hull
      "thickness": 2,                              // user: thickness in voxels of the boundary mask
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "file": {
      "keep": true,
      "dir": [],
      "name": []
    },
    "initial_conditions": {
      "mode": "random",
      "seed": 42
    },
    "method": { // amplitude-based flows using HS3D
      "name": "hs3d",
      "hs3d": {
        "alpha_smooth": 0.1,
        "max_iterations": 128,
        "burnin": {
           "length": 8
        }
      }
    },
    // "method": { // amplitude-based flows using CNEM
    //   "data": {
    //     "mode": "amplitude"
    //   },
    //   "name": "cnem",
    //   "cnem": {
    //     "convex_hull": "bi",
    //     "alpha_smooth": 0.1,
    //     "max_iterations": 128,
    //     "burnin": {
    //       "length": 8
    //     },
    //     "initial_conditions": {
    //       "mode": "random",
    //       "seed": 42
    //     },
    //     "nodal_flows": {
    //       "enabled": false
    //     }
    //   }
    // },
    // "method": { // phase-based flows using CNEM
    //   "data": {
    //     "mode": "phase"
    //   },
    //   "name": "cnem",
    //   "cnem": {
    //     "convex_hull": "bi"
    //   }
    // },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 4,
        "grid": {
          "type": "unstructured"
        }
      }
    },

    "streamlines": {
      "enabled": false,
      "grid": {
        "type": "unstructured"
      }
    },
    "visualisation": {
      "enabled": true
    },
  },
  "singularity": {
    "file": {
      "keep": true,
      "dir": [],
      "name": []
    },
    "detection": {
      "enabled": true,
      "mode": "vel",
      "threshold": [
        0,                                  // user: lower bound of threshold to detect quasi-null-flows
        0.015625                            // user: upper bound of threshold to detect quasi-null-flows
      ]
    },
    "classification": {
      "enabled": true
    },
    "quantification": {
      "enabled": true
    },
    "visualisation": {
      "enabled": true
    }
  }
}